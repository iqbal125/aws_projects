{
  "name": "serverless-rest",
  "version": "0.1.0",
  "description": "Serverless REST API built with AWS CDK, Lambda, and DynamoDB",
  "bin": {
    "serverless-rest": "app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "destroy": "cdk destroy --all --force",
    "deploy": "npm run build && cdk deploy --require-approval never"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.0.0",
    "@aws-lambda-powertools/metrics": "^2.0.0",
    "@aws-lambda-powertools/tracer": "^2.0.0",
    "@aws-sdk/client-dynamodb": "^3.902.0",
    "@aws-sdk/client-rds-data": "^3.0.0",
    "@aws-sdk/client-secrets-manager": "^3.0.0",
    "@middy/core": "^5.0.0",
    "@middy/http-cors": "^5.0.0",
    "@middy/http-error-handler": "^5.0.0",
    "@middy/http-json-body-parser": "^5.0.0",
    "@middy/validator": "^6.4.5",
    "@types/aws-lambda": "^8.10.0",
    "aws-cdk-lib": "2.173.2",
    "constructs": "^10.0.0",
    "drizzle-orm": "^0.44.5",
    "dynamodb-toolbox": "^2.7.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.0",
    "aws-cdk": "2.173.2",
    "drizzle-kit": "^0.20.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  }
